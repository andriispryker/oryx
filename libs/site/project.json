{
  "root": "libs/site",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "./tools/executors/components-library:build"
    },
    "paths": {
      "executor": "./tools/executors/components-library:paths",
      "options": {
        "exclude": ["public"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/site/**/*.ts"]
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/web-components",
        "port": 4400,
        "config": {
          "configFolder": "libs/site/.storybook"
        },
        "staticDir": ["libs/site/public"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/site/**/*.css", "libs/site/**/*.styles.ts"]
      }
    },
    "test": {
      "executor": "./tools/executors/oryx-vite:vitest",
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
