{
  "packages": [
    "*"
  ],
  "version": "1.0.0-next.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "forcePublish": true,
      "contents": "dist",
      "ignoreChanges": [
        "*.md",
        "**/*.spec.ts",
        "**/*.stories.ts"
      ],
      "message": "chore(release): publish libs release [skip ci]",
      "createRelease": "github",
      "allowBranch": [
        "development",
        "release/*"
      ],
      "tagVersionPrefix": "lib@"
    }
  }
}
