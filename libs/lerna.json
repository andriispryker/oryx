{
  "packages": [
    "content",
    "core",
    "experience",
    "injector",
    "lit-rxjs",
    "product",
    "typescript-utils",
    "ui"
  ],
  "version": "0.1.0-next.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "forcePublish": true,
      "contents": "dist",
      "ignoreChanges": ["*.md", "**/*.spec.ts", "**/*.stories.ts"],
      "message": "chore(release): publish libs release [skip ci]",
      "createRelease": "github",
      "gitRemote": "pub",
      "allowBranch": ["development", "release/*"],
      "tagVersionPrefix": "lib@"
    }
  }
}
