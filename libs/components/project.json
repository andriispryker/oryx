{
  "root": "libs/components",
  "sourceRoot": "libs/components/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "./tools/executors/components-library:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/components",
        "main": "libs/components/src/index.ts",
        "tsConfig": "libs/components/tsconfig.lib.json",
        "assets": [
          "libs/components/*.md",
          {
            "input": "libs/components/public",
            "glob": "**/*",
            "output": "/public/"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/components/**/*.ts"]
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/components/**/*.css",
          "libs/components/**/*.styles.ts"
        ]
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/web-components",
        "port": 4400,
        "config": {
          "configFolder": "libs/components/.storybook"
        },
        "staticDir": ["libs/components/public"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/angular",
        "outputPath": "dist/storybook/components",
        "config": {
          "configFolder": "libs/components/.storybook"
        },
        "staticDir": ["libs/components/public"],
        "styles": ["libs/components/public/styles/oryx-theme.css"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test": {
      "executor": "@nrwl/workspace:run-script",
      "options": {
        "script": "test"
      }
    }
  },
  "tags": []
}
